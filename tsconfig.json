{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "types": [ "i18next", "i18next-xhr-backend" ],
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./custom_typings/**/*.d.ts",
    "src/pages/assignment",
    "src/pages/booking", "Views/Home/App.cshtml"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
